<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="com.nr.phonegap.pio"
    version="0.0.9">

    <name>Pio Plugin</name>
    
    <description>push io manager custom</description>
    
    <license>Apache 2.0</license>
    
    <engines>
      <engine name="cordova" version=">=3.0.0" />
    </engines>
    <platform name="android">
    <config-file target="AndroidManifest.xml" parent="/manifest">
        <uses-permission android:name="com.pushio.basic.permission.C2D_MESSAGE" />
        <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
        <uses-permission android:name="android.permission.WAKE_LOCK" />
        <uses-permission android:name="android.permission.INTERNET" />
        <permission android:name="com.pushio.basic.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    </config-file>
    
    <config-file target="AndroidManifest.xml" parent="/manifest/application/activity">

    </config-file>
    
    <config-file target="AndroidManifest.xml" parent="/manifest/application">
        <activity android:name=".PushSettings" android:label="@string/title_activity_push_settings"
            android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AboutThisApp">
            <!-- This filter will cause this activity to be launched by tapping on
             the Notification in the Notification Center -->
            <intent-filter>
                <action android:name="com.pushio.basic.NOTIFICATIONPRESSED" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <receiver android:name="com.pushio.basic.NotificationBroadcastReceiver">
            <intent-filter>
                <action  android:name="com.pushio.basic.PUSHIOPUSH"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.pushio.manager.PushIOBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
                <category android:name="com.pushio.basic" />
            </intent-filter>
        </receiver>
        
        <activity android:name="com.pushio.manager.PushIOActivityLauncher" />
        <service android:name="com.pushio.manager.PushIOGCMIntentService" />
        <service android:name="com.pushio.manager.PushIOEngagementService" />

    </config-file>
    

    <source-file src="src/android/lib/PushIOManager.jar" target-dir="src/android/lib" />
    <source-file src="src/android/lib/android-support-v4.jar" target-dir="src/android/lib" />
    
</platform>


</plugin>
